<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <!--水平分界线-->
    <style name="DividerLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_length</item>
        <item name="android:background">@color/divider_line_color</item>
    </style>

    <!--竖直分界线-->
    <style name="VerticalDividerLineStyle">
        <item name="android:layout_width">@dimen/divider_length</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_line_color</item>
    </style>

    <!--统一按钮风格-->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/selector_btn_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>  <!--取消按钮英文字母自动变大写的属性-->
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <!--标题栏风格-->
    <style name="TitleBarStyle">
        <item name="android:id">@id/title_bar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!--加载状态布局样式-->
    <style name="LoadingLayoutStyle">
        <item name="android:id">@id/loading_layout</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/window_background</item>
        <item name="android:visibility">gone</item>
        <item name="emptyDescText">暂无数据</item>
        <item name="failDescText">暂无网络</item>
        <item name="failActionText">刷新</item>
    </style>

    <!--SmartRefreshLayout统一样式-->
    <style name="SmartRefreshLayoutStyle">
        <item name="android:id">@id/smart_refresh_layout</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--ScrollView风格-->
    <style name="ScrollViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!--隐藏滚动条-->
        <item name="android:scrollbars">none</item>
        <!--不显示波纹效果-->
        <item name="android:overScrollMode">never</item>
    </style>

    <!--通用的RecyclerView风格-->
    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!--隐藏滚动条-->
        <item name="android:scrollbars">none</item>
        <!--不显示波纹效果-->
        <item name="android:overScrollMode">never</item>
        <!--默认线性布局-->
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <!--向上弹出的平移动画-->
    <style name="AnimTranslateBottom">
        <item name="android:windowEnterAnimation">@anim/translate_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/translate_bottom_out</item>
    </style>

    <!--向下弹出的平移动画-->
    <style name="AnimTranslateTop">
        <item name="android:windowEnterAnimation">@anim/translate_top_in</item>
        <item name="android:windowExitAnimation">@anim/translate_top_out</item>
    </style>

    <!--向左弹出的平移动画-->
    <style name="AnimTranslateRight">
        <item name="android:windowEnterAnimation">@anim/translate_right_in</item>
        <item name="android:windowExitAnimation">@anim/translate_right_out</item>
    </style>

    <!--向右弹出的平移动画-->
    <style name="AnimTranslateLeft">
        <item name="android:windowEnterAnimation">@anim/translate_left_in</item>
        <item name="android:windowExitAnimation">@anim/translate_left_out</item>
    </style>

    <!--向上弹出的缩放动画-->
    <style name="AnimScaleBottom">
        <item name="android:windowEnterAnimation">@anim/scale_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/scale_bottom_out</item>
    </style>

    <!--向下弹出的缩放动画-->
    <style name="AnimScaleTop">
        <item name="android:windowEnterAnimation">@anim/scale_top_in</item>
        <item name="android:windowExitAnimation">@anim/scale_top_out</item>
    </style>

    <!--向左弹出的缩放动画-->
    <style name="AnimScaleRight">
        <item name="android:windowEnterAnimation">@anim/scale_right_in</item>
        <item name="android:windowExitAnimation">@anim/scale_right_out</item>
    </style>

    <!--向右弹出的缩放动画-->
    <style name="AnimScaleLeft">
        <item name="android:windowEnterAnimation">@anim/scale_left_in</item>
        <item name="android:windowExitAnimation">@anim/scale_left_out</item>
    </style>

    <!--对话框样式-->
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--加载框样式-->
    <style name="LoadingDialogStyle" parent="DialogStyle">
        <item name="android:backgroundDimEnabled">false</item>  <!--activity不变暗-->
    </style>

    <style name="ItemLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ItemTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/selector_item_layout_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ItemTitleTextStyle" parent="ItemTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="ItemSingleTextStyle" parent="ItemTextStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="ItemLeftTextStyle" parent="ItemTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>

    <style name="ItemRightTextStyle" parent="ItemTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">1dp</item>
    </style>

    <style name="SingleWidgetStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="SingleWidgetDividerLineStyle" parent="DividerLineStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="CostItemLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="CostItemLeftTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CostItemCenterTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CostItemRightTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CostItemRightIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/ic_more</item>
    </style>

    <style name="SystemWidgetTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ToggleButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_toggle_button_bg</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/selector_toggle_button_text_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="dividerColor">@color/colorPrimary</item>
        <item name="dividerHeight">2dp</item>
    </style>

    <style name="permission_PermissionActivity" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
    </style>
</resources>